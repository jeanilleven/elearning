<% provide(:title, "Categories") %>

<div class="jumbotron mt-2">
    <h3 class='text-center usersheader'>Categories</h3>
    <div class='d-flex justify-content-center'>
        <%= will_paginate @categories %>
    </div>

    <ul class="userlist">
        <div class="row">
            <% @categories.each do |category| %>
                <div class="col-lg-4 col-sm-12 d-flex justify-content-center">
                    <li class="user">
                        <div class="row">
                            <div class="col-8 user-name d-flex justify-content-left">
                                <h4><%= category.title %></h4>
                            </div>
                            <div class="col-4">
                                <div class="float-right">
                                    <%= category.words.count %>&nbsp;Words
                                </div>
                            </div>
                        </div>
                        <div class="divider"></div>
                        <div class="row">
                            <div class="col-12">
                                <p><%= category.description %></p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 vertical-align-center start-btn">
                                <button class= "btn btn-info">Start lesson</button>
                            </div>
                        </div>
                    </li>
                </div>
            <% end %>
        </div>
    </ul>
    <div class='d-flex justify-content-center'>
        <%= will_paginate @categories %>
    </div>
</div>