<%= form_for [:admin, @category ] do |f| %>
        <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
            <%= f.label :description %>
            <%= f.text_field :description, class: "form-control" %>
        </div>

        <% if @category.title.nil? %>
            <div class="form-group">
                <%= f.submit "Create Category", class: "btn btn-block btn-primary" %>
            </div>
        <% else %>
            <div class="form-group">
                <%= f.submit "Update Category", class: "btn btn-block btn-primary" %>
            </div>
        <% end %>
<% end %>