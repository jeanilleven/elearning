<% provide(:title, "Worsd Learned") %>

<div class="jumbotron mt-2">
    <h3 class='text-center usersheader'>Words Learned</h3>
    <div class='mt-2'>
        <div class="row">
            <div class="col-12 d-flex justify-content-center mt-3">
                <h5>This is your entire result.</h5>
            </div>
            <div class="col-12 d-flex justify-content-center mt-2">
                <%= will_paginate @words %>
            </div>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-12">
            <table class="table">
                <thead class="thead-white">
                    <tr>
                        <th scope="col">Word</th>
                        <th scope="col">Your Answer</th>
                        <th scope="col">Correct Answer</th>
                        <th scope="col">Your Result</th>
                    </tr>
                </thead>
                <tbody class="tbody-white">
                    <% @words.each do |word| %>
                        <tr>
                            <td class="text-align-center"><%= word[:word][:content] %></td>
                            <td class="text-align-center"><%= word[:answer][:content] %></td>
                            <td class="text-align-center"><%= word[:correct_choice][0][:content] %></td>
                            <td class="d-flex justify-content-center">
                                <% if word[:answer][:id] == word[:correct_choice][0][:id] %>
                                    <i class="fa fa-check-circle-o checkmark"></i>
                                <% else %>
                                    <i class="fa fa-times-circle-o xmark"></i>
                                <% end %>
                            </td>
                        </tr>   
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-12 d-flex justify-content-center">
            <%= link_to "Back to Categories", categories_path, class: "btn btn-warning" %>
        </div>
    </div>
</div>