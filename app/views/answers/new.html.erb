<% provide(:title, "Lesson") %>

<div class="jumbotron mt-2">
    <h2 class='text-center usersheader'>
        <%= @lesson.category.title %>
    </h2>
    <div class='d-flex justify-content-center mt-4'>
        <h5>Select your answer</h5>
    </div>
    <div class='d-flex justify-content-center mt-4'>
        <strong><%= @lesson.answers.count+1 %> of <%= @lesson.category.words.count %></strong>
    </div>
    <div class="userlist mt-4">
        <div class="row d-flex justify-content-center">
            <div class="col-12 d-flex justify-content-center">
                <div class="card " style="width: 30rem;">
                    <div class="card-header d-flex justify-content-center">
                        <h4><%= @word.content %></h4>
                    </div>
                    <ul class="list-group list-group-flush">
                        <% @word.choices.each do |choice| %>
                            <li class="list-group-item d-flex justify-content-center">
                                <%= render 'form', choice: choice %>
                            </li>
                        <% end %>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class='d-flex justify-content-center'>
    </div>
</div>